{
  "kind": "collectionType",
  "collectionName": "sections",
  "info": {
    "singularName": "section",
    "pluralName": "sections",
    "displayName": "Section",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "nom": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "timer": {
      "type": "datetime"
    },
    "ordre": {
      "type": "integer",
      "default": 0
    },
    "parent": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::section.section",
      "inversedBy": "enfants"
    },
    "enfants": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::section.section",
      "mappedBy": "parent"
    },
    "produits": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::produit.produit"
    },
    "style": {
      "type": "enumeration",
      "enum": [
        "selection",
        "simple"
      ],
      "required": true,
      "default": "simple"
    },
    "avatar": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "titre_selection": {
      "type": "string"
    },
    "sous_titre": {
      "type": "string"
    },
    "categories": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::categorie.categorie"
    },
    "top_produits": {
      "type": "component",
      "repeatable": true,
      "component": "shared.produit"
    }
  }
}
